<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">
<mapper namespace="org.danielli.xultimate.searching.dao.ExtKeywordDAO">	
	<select id="find" resultType="String">
		SELECT keyword FROM solr_ext_keywords JOIN (SELECT id FROM solr_ext_keywords LIMIT #{param1}, #{param2}) TMP USING (id)
	</select>
	<resultMap type="org.danielli.xultimate.searching.po.ExtKeyword" id="extKeywordMapping">
		<id column="id" property="id"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
		<result column="keyword" property="keyword"/>
	</resultMap>
</mapper> 